(define (sponge)
  (spiculate-skeleton (define (spiculate-skeleton)
                        (uniform-length no)
                        (microscleres (define (set)
                                        (define (microxea)
                                         (max-length 1200))
                                        (define (sterraster)
                                         (type ovoid)
                                         (sterr-diameter 110))
                                        (define (oxyaster)
                                         (two-length-categories no))))
                        (chemical silica)
                        (megascleres (define (megascleres)
                                       (acanthose no-acanthose)
                                       (ornamentation smooth-ornamentation)
                                       (smooth-form (define (set)
                                                      oxea
                                                      dichotriaena))
                                       (max-length 1200)
                                       (two-or-more-length no)
                                       (characteristics (define (characters)
                                                          (shaft normal)))
                                       (predominant-kind oxeas)))
                        (sclerospongids no)))
  (ecological-features (define (ecological-features)
                         (location mediterranean)))
  (external-features (define (external-features)
                       (osc (define (osc-characteristics)
                              (dot no)
                              (pososc elevated)
                              (numosc several)))
                       (hand rubbery)
                       (hollow no)
                       (colour (define (colour)
                                 (external black)))
                       (body-size medium)
                       (brush no)
                       (consistency soft)
                       (growing (define (growing)
                                  (line-form (define (line-form)
                                               (form (define (set)
                                                       irregularly-massive
                                                       tubular))))))))
  (anatomy (define (anatomic-features)
             (ornamentation smooth-ornamentation)
             (ectosome (define (visible-ectosome)
                         (separable yes)
                         (skeleton (define (skeleton-characteristics)
                                     (aspect ordered)))
                         (spicules yes)))
             (cortex (define (cortex-characteristics)
                       (cortical-spicules yes))))))
